<div class="row">
  <% @posts.each do |post| %>
    <div class="col-md-6 col-lg-4">
      <div class="card post-card">
        
        <div class="card-body d-flex flex-column">
          <h5 class="card-title"><%= post.title %></h5>
          <p class="card-text"><%= truncate(post.description, length: 250) %></p>
          
        </div>
      </div>
    </div>
  <% end %>
</div>
